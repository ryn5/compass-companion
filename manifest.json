{
    "manifest_version": 3,
    "name": "compass-companion",
    "description": "A chrome extension for your Compass card",
    "version": "1.0",
    "icons": {
        "128": "images/orange.jpeg"
    },
    "action": {
        "default_icon": "images/blue.jpeg",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "storage", "notifications", "tabs"],
    "background": {
        "service_worker": "background.js"
    }
}